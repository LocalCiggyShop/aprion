      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:aprion"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Spinner">
    <Grid>
        <TextBlock Name="Title" HorizontalAlignment="Center" VerticalAlignment="Center" Height="80" TextAlignment="Center" FontSize="22" Foreground="DarkOrange" Text="TIP" Width="756" />

        <TextBlock Name="Text" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Foreground="White" FontSize="15" Text="Loading" Width="755" />

        <Button Name="DiscordLink" HorizontalAlignment="Center" VerticalAlignment="Top" BorderBrush="#5865F2" Foreground="White" Background="Transparent" Content="Discord"  Width="104" Height="29" Click="DiscordLink_Click" Margin="0,409,0,0" />
    </Grid>
